class Televisao: #Classe televisão
    def __init__(self): #Construtor de classe.
        self.volume = 10 #Atributo da classe.
        self.brilho= 5  #Atributo da classe.
    
    def aumentar_volume(self): #Método da classe
        self.volume += 1
    
    def diminuir_volume(self): #Método da classe
        self.volume -= 1
    
    def aumentar_brilho(self): #Método da classe
        self.brilho += 1
    
    def diminuir_brilho(self):
        self.brilho -=1

tv = Televisao() #Instanciando o objeto do tipo televisão
print("Volume ao ligar a tv = ", tv.volume)
tv.aumentar_volume() #Acessando o método da classe televisão.
print("Volume atual = ", tv.volume)
tv.diminuir_brilho() #Acessando o método da classe televisão.
print("Brilho atual= ", tv.brilho)